/*
    MySTL string forward declarations
*/

#ifndef __MYSTL_STRING_FORWARD_DECLARATIONS__
#define __MYSTL_STRING_FORWARD_DECLARATIONS__

#include <string.h>
#include <wchar.h> //cwchar имеет проблемы компиляции на mingw 3.4.5

#include <stl/config.h>

namespace stl
{

template <class Char> struct char_traits;

template <class T,class Traits=char_traits<T>,class Allocator=typename default_string_allocator<T>::allocator_type>
class basic_string;

typedef basic_string<char>    string;
typedef basic_string<wchar_t> wstring;

}

#endif
